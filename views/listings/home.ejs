<% layout("/layouts/boilerplate.ejs") %>
<style>
    /* Custom styles for the welcome page */
    .hero-section {
        background-image: url('https://wallpaperaccess.com/full/1459144.jpg'); /* Replace with an IPL-themed background image */
        background-size: cover;
        background-position: center;
        color: white;
        padding: 100px 0;
        border-radius: 20px;
    }

    .hero-section h1 {
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    .hero-section p {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .hero-section .btn {
        background-color: #66FCF1;
        border: none;
        padding: 10px 25px;
        transition: transform 0.3s ease;
    }

    .hero-section .btn:hover {
        transform: scale(1.05);
        background-color: #45A29E;
    }

    /* Features Section */
    .features-section .card {
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .features-section .card:hover {
        transform: translateY(-10px);
    }

    .features-section .fa {
        color: #66FCF1;
    }

    /* Testimonials Section */
    .testimonials-section blockquote {
        font-size: 1.1rem;
        color: #333;
    }

    .testimonials-section .blockquote-footer {
        color: #666;
    }

    /* Button Links */
    .btn-link {
        text-decoration: none;
        color: inherit;
    }

    .btn-link:hover {
        text-decoration: none;
        color: #fff;
    }
</style>

<body>
    <!-- Hero Section -->
    <div class="hero-section text-center">
        <h1 class="display-4 fw-bold">Welcome to TheFanClub</h1>
        <p class="lead">Your ultimate destination for your favorite IPL franchise. Explore team-themed merchandise and goodies now!</p>
        <a href="/listings" class="btn btn-lg btn-link">Start Shopping &#8594;</a>
    </div>

    <br/><br/>

    <!-- Features Section -->
    <div class="container features-section my-5">
        <h2 class="text-center mb-4">Why Choose TheFanClub?</h2>
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fa fa-users fa-3x mb-3"></i>
                        <h5 class="card-title">Team-Themed Merchandise</h5>
                        <p class="card-text">Find exclusive merchandise from your favorite IPL teams.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fa fa-gift fa-3x mb-3"></i>
                        <h5 class="card-title">Premium Products</h5>
                        <p class="card-text">Get high-quality products that celebrate your team spirit.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fa fa-truck fa-3x mb-3"></i>
                        <h5 class="card-title">Fast Delivery</h5>
                        <p class="card-text">Enjoy quick and reliable delivery of your orders.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container testimonials-section my-5">
        <h2 class="text-center mb-4">What Fans Say</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>"TheFanClub has everything I need to cheer for my team in style!"</p>
                            <footer class="blockquote-footer">Rahul Sharma, RCB Fan</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>"The personalized themes are amazing! CSK forever!"</p>
                            <footer class="blockquote-footer">Priya Kapoor, CSK Fan</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>"Fantastic products and fast delivery. I'll shop again!"</p>
                            <footer class="blockquote-footer">Amit Verma, MI Fan</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
